{
  "name": "@raid/monorepo",
  "private": "true",
  "scripts": {
    "test": "lerna run test --ignore @raid/monorepo",
    "lint": "standard",
    "predocs": "npm run clean && gitbook install",
    "clean": "rm -rf _book",
    "build": "lerna run build --ignore @raid/monorepo",
    "setup": "lerna bootstrap",
    "cover": "lerna run cover --ignore '@(raid/monorepo|raid-addons)'",
    "docs": "gitbook build",
    "docs:watch": "gitbook serve",
    "docs:deploy": "npm run docs && cd _book && git init && git commit --allow-empty -m 'update book' && git checkout -b gh-pages && git add . && git commit -am 'update book' && git push git@github.com:mattstyles/raid gh-pages --force",
    "start": "node scripts/examples"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "babel": {
    "env": {
      "react": {
        "presets": [
          "urban"
        ],
        "plugins": [
          "transform-react-require",
          "styled-jsx/babel"
        ]
      },
      "development": {
        "presets": [
          "urban"
        ],
        "plugins": [
          [
            "transform-react-require",
            {
              "identifier": "Inferno",
              "moduleName": "inferno"
            }
          ],
          "inferno",
          "styled-jsx/babel"
        ]
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "keywords": [
    "raid",
    "stream",
    "scan",
    "state",
    "signal",
    "component"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/raid.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattstyles/raid/issues"
  },
  "homepage": "https://github.com/mattstyles/raid#readme",
  "devDependencies": {
    "axios": "^0.15.3",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-inferno": "^0.7.7",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-preset-urban": "^1.0.0",
    "babel-register": "^6.16.3",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "budo": "^9.2.1",
    "envify": "^4.0.0",
    "force-array": "^3.1.0",
    "gh-pages": "^0.9.0",
    "immutable": "^3.8.1",
    "inferno": "^0.7.27",
    "inferno-component": "^0.7.27",
    "inferno-dom": "^0.7.27",
    "inquirer": "^3.0.6",
    "lerna": "2.0.0-beta.38",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "raid": "^2.2.0",
    "raid-addons": "^2.2.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "reselect": "^2.5.4",
    "standard": "^9.0.1",
    "styled-jsx": "^0.5.7"
  },
  "version": "2.2.0"
}
