{
  "name": "@raid/monorepo",
  "private": "true",
  "version": "5.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "lerna run test --ignore @raid/monorepo",
    "lint": "standard",
    "preclean": "rm -rf _book",
    "clean": "lerna run clean",
    "build": "lerna run build --ignore @raid/monorepo",
    "setup": "lerna bootstrap --concurrency=1",
    "postsetup": "yarn run build",
    "cover": "lerna run coverage-report --ignore raid/monorepo",
    "postcover": "istanbul-combine -d coverage -p summary -r lcov packages/**/coverage/*.json",
    "cover:upload": "cat ./coverage/lcov.info | coveralls",
    "predocs": "yarn run clean && gitbook install",
    "docs": "gitbook build",
    "docs:watch": "gitbook serve",
    "predocs:deploy": "yarn run docs",
    "docs:deploy": "gh-pages -d _book",
    "start": "node scripts/examples"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "styled-components",
      "transform-react-require",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": false
        }
      ]
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "keywords": [
    "raid",
    "stream",
    "scan",
    "state",
    "signal",
    "component"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/raid.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattstyles/raid/issues"
  },
  "homepage": "https://github.com/mattstyles/raid#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@mattstyles/match": "^1.0.1",
    "@raid/addons": "^5.0.0",
    "@raid/fl": "^5.0.0",
    "@raid/navigator": "^5.0.0",
    "@raid/streams": "^5.0.0",
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-react-require": "^1.0.1",
    "coveralls": "^3.0.4",
    "folktale": "^2.3.2",
    "force-array": "^3.1.0",
    "gh-pages": "^2.0.1",
    "history": "^4.9.0",
    "immutable": "^3.8.1",
    "inquirer": "^6.4.1",
    "istanbul-combine": "^0.3.0",
    "lerna": "^3.15.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "most": "^1.8.0",
    "nyc": "^14.1.1",
    "raid": "^5.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-transition-group": "^4.2.1",
    "reselect": "4.0.0",
    "speedrun": "^1.0.0",
    "standard": "^14.3.3",
    "styled-components": "^5.1.0"
  },
  "dependencies": {
    "gitbook-cli": "^2.3.2",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^2.0.0",
    "gitbook-plugin-prism": "^2.4.0"
  }
}
