{
  "name": "raid",
  "version": "0.5.0",
  "description": "Centralised immutable state",
  "main": "lib/",
  "scripts": {
    "clean": "rm -rf lib _book",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir lib",
    "watch": "babel --watch src --out-dir lib",
    "prestart": "npm run build",
    "start": "node examples",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run build",
    "predocs": "npm run clean && gitbook install",
    "docs": "gitbook build",
    "docs:watch": "gitbook serve",
    "docs:deploy": "npm run docs && cd _book && git init && git commit --allow-empty -m 'update book' && git checkout -b gh-pages && git add . && git commit -am 'update book' && git push git@github.com:mattstyles/raid gh-pages --force"
  },
  "browserify": {
    "transform": "babelify"
  },
  "babel": {
    "presets": [ "urban" ]
  },
  "keywords": [
    "react",
    "react-component",
    "component",
    "immstruct",
    "immutable",
    "state",
    "centralised",
    "raid",
    "action",
    "dispatcher",
    "enhancer",
    "enhance"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattstyles/raid"
  },
  "bugs": "https://github.com/mattstyles/raid/issues",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^4.1.8",
    "babel-preset-urban": "^0.4.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.0.4",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.16.1",
    "gh-pages": "^0.9.0",
    "inquirer": "^0.12.0",
    "minimist": "^1.2.0",
    "react-addons-perf": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "peerDependencies": {
    "immstruct": "^2.0.0",
    "immutable": "^3.7.6",
    "react": "^0.14.7"
  },
  "dependencies": {
    "defined": "^1.0.0",
    "eventemitter3": "^1.1.1",
    "flux": "^2.1.1",
    "rx-lite": "^4.0.8"
  }
}
