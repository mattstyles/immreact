{
  "name": "raid",
  "version": "next",
  "description": "Centralised immutable state",
  "main": "lib/",
  "scripts": {
    "clean": "rm -rf lib _book",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir lib",
    "watch": "babel --watch src --out-dir lib",
    "prestart": "npm run build",
    "start": "node examples",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run build",
    "predocs": "npm run clean && gitbook install",
    "docs": "gitbook build",
    "docs:watch": "gitbook serve",
    "docs:deploy": "npm run docs && cd _book && git init && git commit --allow-empty -m 'update book' && git checkout -b gh-pages && git add . && git commit -am 'update book' && git push git@github.com:mattstyles/raid gh-pages --force"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "urban"
    ],
    "plugins": [
      [
        "transform-react-require",
        {
          "identifier": "Inferno",
          "moduleName": "inferno"
        }
      ],
      "inferno"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "keywords": [
    "raid",
    "stream",
    "scan",
    "state",
    "signal",
    "component"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattstyles/raid"
  },
  "bugs": "https://github.com/mattstyles/raid/issues",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-inferno": "^0.7.7",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-preset-urban": "^0.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "budo": "^9.2.1",
    "gh-pages": "^0.9.0",
    "inferno": "^0.7.27",
    "inferno-component": "^0.7.27",
    "inferno-dom": "^0.7.27",
    "inquirer": "^1.2.1",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "standard": "^8.3.0"
  },
  "dependencies": {
    "eventemitter3": "^1.1.1",
    "most": "^1.0.3"
  }
}
