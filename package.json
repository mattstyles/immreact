{
  "name": "@raid/monorepo",
  "private": "true",
  "scripts": {
    "test": "lerna run test --ignore @raid/monorepo",
    "lint": "standard",
    "clean": "rm -rf _book",
    "build": "lerna run build --ignore @raid/monorepo",
    "setup": "lerna bootstrap --concurrency=1",
    "cover": "lerna run coverage-report --ignore raid/monorepo",
    "postcover": "istanbul-combine -d coverage -p summary -r lcov packages/**/coverage/*.json",
    "cover:upload": "cat ./coverage/lcov.info | coveralls",
    "predocs": "npm run clean && gitbook install",
    "docs": "gitbook build",
    "docs:watch": "gitbook serve",
    "predocs:deploy": "npm run docs",
    "docs:deploy": "gh-pages -d _book",
    "start": "BABEL_ENV=react node scripts/examples"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "babel": {
    "env": {
      "react": {
        "presets": [
          "urban"
        ],
        "plugins": [
          "transform-react-require",
          "styled-jsx/babel"
        ]
      },
      "inferno": {
        "presets": [
          "urban"
        ],
        "plugins": [
          [
            "transform-react-require",
            {
              "identifier": "Inferno",
              "moduleName": "inferno"
            }
          ],
          "inferno",
          "styled-jsx/babel"
        ]
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "keywords": [
    "raid",
    "stream",
    "scan",
    "state",
    "signal",
    "component"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/raid.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattstyles/raid/issues"
  },
  "homepage": "https://github.com/mattstyles/raid#readme",
  "devDependencies": {
    "@mattstyles/match": "^1.0.1",
    "axios": "^0.15.3",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-inferno": "^0.7.7",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-preset-urban": "^1.0.0",
    "babel-register": "^6.16.3",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "budo": "^9.2.1",
    "coveralls": "^2.11.14",
    "envify": "^4.0.0",
    "folktale": "^2.0.0",
    "force-array": "^3.1.0",
    "gh-pages": "^1.0.0",
    "history": "^4.7.2",
    "immutable": "^3.8.1",
    "inferno": "^0.7.27",
    "inferno-component": "^0.7.27",
    "inferno-dom": "^0.7.27",
    "inquirer": "^3.0.6",
    "istanbul-combine": "^0.3.0",
    "lerna": "^2.4.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nyc": "^10.1.2",
    "raid": "^2.10.1",
    "raid-addons": "^2.11.0",
    "raid-fl": "^2.12.0",
    "raid-navigator": "^2.12.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "reselect": "^2.5.4",
    "standard": "^9.0.1",
    "styled-jsx": "^2.0.1"
  },
  "version": "2.12.0",
  "dependencies": {
    "gitbook-plugin-edit-link": "^2.0.2"
  }
}
