{
  "name": "@raid/monorepo",
  "private": "true",
  "scripts": {
    "test": "lerna run test --ignore @raid/monorepo",
    "lint": "standard",
    "clean": "rm -rf _book",
    "build": "lerna run build --ignore @raid/monorepo",
    "setup": "lerna bootstrap --concurrency=1",
    "cover": "lerna run coverage-report --ignore raid/monorepo",
    "postcover": "istanbul-combine -d coverage -p summary -r lcov packages/**/coverage/*.json",
    "cover:upload": "cat ./coverage/lcov.info | coveralls",
    "predocs": "npm run clean && gitbook install",
    "docs": "gitbook build",
    "docs:watch": "gitbook serve",
    "predocs:deploy": "npm run docs",
    "docs:deploy": "gh-pages -d _book",
    "start": "node scripts/examples"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "styled-components",
      "transform-react-require",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": false
        }
      ]
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "keywords": [
    "raid",
    "stream",
    "scan",
    "state",
    "signal",
    "component"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/raid.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattstyles/raid/issues"
  },
  "homepage": "https://github.com/mattstyles/raid#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@mattstyles/match": "^1.0.1",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.0",
    "babel-plugin-styled-components": "^1.8.0",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "budo": "^11.5.0",
    "coveralls": "^2.11.14",
    "envify": "^4.0.0",
    "folktale": "^2.0.0",
    "force-array": "^3.1.0",
    "gh-pages": "^1.0.0",
    "history": "^4.7.2",
    "immutable": "^3.8.1",
    "inquirer": "^3.0.6",
    "istanbul-combine": "^0.3.0",
    "lerna": "^3.4.3",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nyc": "^10.1.2",
    "raid": "^2.13.0",
    "raid-addons": "^2.13.0",
    "raid-fl": "^2.13.0",
    "raid-navigator": "^2.12.0",
    "raid-streams": "^2.13.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-transition-group": "^2.4.0",
    "reselect": "^2.5.4",
    "standard": "^12.0.0",
    "styled-components": "^4.1.1"
  },
  "version": "2.13.0",
  "dependencies": {
    "gitbook-cli": "^2.3.2",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^2.0.0",
    "gitbook-plugin-prism": "^2.4.0"
  }
}
