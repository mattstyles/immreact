{
  "name": "@raid/navigator",
  "version": "6.1.0",
  "description": "Navigation stack hooked in to a raid signal",
  "main": "lib/raid-navigator.js",
  "module": "lib/raid-navigator.esm.js",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "standard",
    "size": "size-limit",
    "prebuild": "yarn run clean",
    "build": "NODE_ENV=production rk build -t ui",
    "watch": "rk watch -t ui",
    "prestart": "yarn run build",
    "start": "yarn run watch",
    "test": "tape -r @babel/register spec/*.test.js",
    "cover": "nyc tape -r @babel/register spec/*.test.js",
    "coverage-report": "nyc report --reporter=lcov",
    "prepublish": "npm run build"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "transform-react-require"
    ]
  },
  "sideEffects": false,
  "size-limit": [
    {
      "path": "./lib/raid-navigator.esm.js",
      "limit": "10 KB"
    }
  ],
  "standard": {
    "parser": "babel-eslint"
  },
  "keywords": [
    "raid",
    "navigator",
    "router",
    "history",
    "stack"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattstyles/raid",
    "directory": "packages/navigator"
  },
  "bugs": "https://github.com/mattstyles/raid/issues",
  "devDependencies": {
    "@raid/rk": "^0.20.0",
    "@size-limit/preset-small-lib": "^4.6.0",
    "jsdom": "^16.2.2",
    "standard": "^14.3.1"
  },
  "dependencies": {
    "@raid/addons": "^6.1.0",
    "history": "^5.0.0",
    "reselect": "^4.0.0"
  },
  "peerDependencies": {
    "raid": "^6.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-is": "^16.9.0"
  },
  "license": "MIT",
  "gitHead": "133ec598275946f14fe0a0e8ef1fcdae8e2ba3d6"
}
