{
  "name": "raid-addons",
  "version": "2.2.0-rc",
  "description": "Add-ons functions for use with Raid",
  "main": "lib/",
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "yarn run clean",
    "build": "babel src --out-dir lib",
    "watch": "babel --watch src --out-dir lib",
    "test": "nyc tape -r babel-register spec/*.js",
    "test-only": "tape -r babel-register spec/*.js",
    "prepublish": "yarn run build",
    "start": "yarn run build"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "urban"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "keywords": [
    "raid",
    "addons",
    "helpers",
    "utility"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattstyles/raid-addons"
  },
  "bugs": "https://github.com/mattstyles/raid-addons/issues",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-urban": "^1.0.0",
    "babel-register": "^6.16.3",
    "coveralls": "^2.11.14",
    "nyc": "^10.1.2",
    "raid": "*",
    "rimraf": "^2.5.2",
    "standard": "^9.0.1",
    "tape": "^4.6.2"
  },
  "dependencies": {
    "force-array": "^3.1.0"
  }
}
