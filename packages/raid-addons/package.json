{
  "name": "raid-addons",
  "version": "3.3.1",
  "description": "Add-ons functions for use with Raid",
  "main": "lib/",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "standard",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir lib",
    "watch": "babel --watch src --out-dir lib",
    "test": "tape -r @babel/register spec/*.test.js",
    "cover": "nyc tape -r @babel/register spec/*.test.js",
    "coverage-report": "nyc --reporter=lcov npm run test",
    "prepublish": "npm run build",
    "prestart": "npm run build",
    "start": "npm run watch"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": false
        }
      ]
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "keywords": [
    "raid",
    "addons",
    "helpers",
    "utility"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattstyles/raid"
  },
  "bugs": "https://github.com/mattstyles/raid/issues",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-env": "^7.5.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.2",
    "coveralls": "^3.0.4",
    "nyc": "^14.1.1",
    "raid": "^3.3.1",
    "rimraf": "^2.6.3",
    "standard": "^12.0.1",
    "tape": "^4.9.1"
  },
  "dependencies": {
    "@mattstyles/match": "^1.0.1",
    "force-array": "^3.1.0"
  }
}
